<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tebakwarna"
    tools:context=".mobilHijau">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginBottom="84dp"
        android:autoText="true"
        android:fontFamily="sans-serif-black"
        android:text="Wah Pintar Ini Mobil Hijau"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/mobil_hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mobil_hijau"
        android:layout_width="353dp"
        android:layout_height="131dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toTopOf="@+id/refresh_mobilhijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mobilijo" />

    <ImageView
        android:id="@+id/refresh_mobilhijau"
        android:layout_width="69dp"
        android:layout_height="62dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/stat_notify_sync" />
</androidx.constraintlayout.widget.ConstraintLayout>