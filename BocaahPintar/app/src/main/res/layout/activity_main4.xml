<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tebakwarna"
    tools:context=".MainActivity4">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="118dp"
        android:layout_height="116dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/apelijo" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="134dp"
        android:layout_height="124dp"
        android:layout_marginBottom="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/apelmerah" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="155dp"
        android:layout_height="104dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/jeruk" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="271dp"
        android:layout_height="46dp"
        android:layout_marginBottom="56dp"
        android:autoText="false"
        android:background="#A7EAFF"
        android:capitalize="none"
        android:fontFamily="sans-serif-black"
        android:text="Mana Apel Hijau ? "
        android:textColor="@color/black"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/back_apel_hijau"
        android:layout_width="59dp"
        android:layout_height="44dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="341dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />
</androidx.constraintlayout.widget.ConstraintLayout>